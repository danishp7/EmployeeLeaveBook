@using LeaveBook.ViewModels;
@model LeaveRequestViewModel

@{
    var lrModel = Model;
    ViewData["Title"] = "ApplyForLeave";
}

<h1>ApplyForLeave</h1>

<h4>LeaveRequestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyForLeave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="LeaveTypeId" asp-items="@(new SelectList(Model.LeaveTypes,"Id", "Name", "AllottedDays"))" class="form-control"></select>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppliedDate" class="control-label"></label>
                <input asp-for="AppliedDate" class="form-control" />
                <span asp-validation-for="AppliedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
