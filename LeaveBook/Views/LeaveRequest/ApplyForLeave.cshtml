@using LeaveBook.ViewModels;
@model Tuple<LeaveRequestViewModel, List<LeaveTypeViewModel>>

@{
    ViewData["Title"] = "ApplyForLeave";
}

<h1>ApplyForLeave</h1>

<h4>LeaveRequestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyForLeave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item2" class="control-label"></label>
                <select asp-items="@(new SelectList(Model.Item2))"><option>Please Select Leave Type</option></select>
                <span asp-validation-for="Item1.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.Reason" class="control-label"></label>
                <input asp-for="Item1.Reason" class="form-control" />
                <span asp-validation-for="Item1.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.AppliedDate" class="control-label"></label>
                <input asp-for="Item1.AppliedDate" class="form-control" />
                <span asp-validation-for="Item1.AppliedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.StartDate" class="control-label"></label>
                <input asp-for="Item1.StartDate" class="form-control" />
                <span asp-validation-for="Item1.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.EndDate" class="control-label"></label>
                <input asp-for="Item1.EndDate" class="form-control" />
                <span asp-validation-for="Item1.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
